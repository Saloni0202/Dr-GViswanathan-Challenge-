580A. Kefa and First Steps

#include <iostream>
 
using namespace std;
 
int main()
{
    int n;
    cin >> n;
    int a[n];
 
    for(int i = 0 ; i < n ; i++){
        cin >> a[i];
    }
 
    int high = 1;
    int highest = 1;
 
    for(int j = 1 ; j < n ; j++){
        if (a[j] >= a[j-1]){
            high++;
            if (high > highest) {
                highest = high;
            }
        }else high = 1;
    }
 
    cout << highest;
}


369A. Valera and Plates

#include <iostream>
using namespace std;

int main()
{
    int n, m, k, t, c(0);
    cin >> n >> m >> k;

    for (int i = 0; i < n; i++)
    {
        cin >> t;
        if (t == 1)
            if (m > 0)
                m--;
            else
                c++;
        else
            if (k > 0)
                k--;
            else if (m > 0)
                m--;
            else
                c++;
    }

    cout << c << endl;
    return 0;
}
