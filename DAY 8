158A. Next Round

#include <iostream>
using namespace std;
 
int main(){
    int n = 0, k = 0;
    cin>>n>>k;
    int a[n];
    
    for(int i = 0; i <n; i++)
    {
        cin>> a[i];
    }
    int kValue = a[k-1];
    int count = 0;
    for(int i = 0; i<n; i++)
    {
        if(a[i]>= kValue && a[i] != 0)
        {
            count++;
        }
    }
    cout<<count;
    puts("");
    return 0;
}



263A. Beautiful Matrix

#include <iostream>
#include <cmath>
using namespace std;
 
int main(){
    int c = 0;
    for(int i = 1; i<=5; i++)
    {
        for(int j = 1; j<=5; j++)
        {
            cin>>c;
            if(c == 1){
                cout<< abs(i-3)+abs(j-3)<<endl;
            }
        }
    }
    return 0;
}
