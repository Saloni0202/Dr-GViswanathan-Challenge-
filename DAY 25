535B. Tavas and SaDDas

#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long l,i,x,sum,point;
    string s;
    while(cin>>s){
        l=s.size();sum=0,x=1;
        for(i=l-1;i>=0;i--){
            if(s[i]=='7')
                point=pow(2,x);
            else
                point=pow(2,x)-pow(2,x-1);

                x++;
                sum+=point;
        }
        cout<<sum<<endl;
    }
    return 0;
}


510A. Fox and Snake

#include <iostream>
using namespace std;

int main() {

int n,m;
cin>>n>>m;
int oddness=0;
for(int i=0;i<n;i++){
	if(i%2==0){

	for(int j=0;j<m;j++){
		cout<<"#";}
	}
		else {
			++oddness;
			for(int j=0;j<m;j++){
					if(oddness%2==1&&j==m-1){
						cout<<"#";
					}
					else if(oddness%2==0&&j==0){
						cout<<"#";

					}
					else {
						cout<<".";
					}
			}
		}
	cout<<"\n";


	}

	return 0;
}
